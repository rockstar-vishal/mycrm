.nested-fields.col-md-4{:style => "border: 1px dashed #999; border-radius: 5px; padding: 20px;"}
  .form-group
    = f.select :project_id, options_from_collection_for_select(current_user.company.projects, :id, :name, (f.object.project_id rescue nil)), :prompt=>'Select Project', class: 'form-control'
    = f.select :source_id, options_from_collection_for_select(current_user.company.sources, :id, :name, (f.object.source_id rescue nil)), :prompt=>'Select source', class: 'form-control'
    = f.select :sub_source_id, options_from_collection_for_select(current_user.company.sub_sources, :id, :name, (f.object.sub_source_id rescue nil)), :prompt=>'Select SubSource', class: 'form-control'
  %center
    = link_to_remove_association "Remove", f, :class=>"btn btn-danger"
