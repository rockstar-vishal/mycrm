.content-wrapper
  .content-header
    .container-fluid
      .row.mb-2
        .col-sm-12
          %ol.breadcrumb
            %li.breadcrumb-item
              %a{:href => "/"} Home
            %li.breadcrumb-item.active Fb Pages
        .col-sm-12
          %h1.m-0.text-dark Fb Pages
  .content
    .container-fluid
      .row
        .col-lg-12
          .card
            .card-header
              .col-md-12
                = link_to "Import", fb_pages_import_company_path, class: "btn btn-primary"
            .card-body
              %table.table
                %thead
                  %tr
                    %th Page FB ID
                    %th Title
                    %th Forms
                %tbody
                  - @fb_pages.each do |page|
                    %tr
                      %td 
                        = page.page_fbid
                      %td
                        = page.title
                      %td
                        = page.fb_forms.count
