.modal-header
  %h5.modal-title Cross Pitch Lead #{@lead.name}
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} Ã—
.modal-body
  = bootstrap_form_for @lead, method: :post, remote: true, url: copy_lead_path(@lead) do |f|
    .row
      - users = current_user.is_cross_pitch ? @company.users.active.where(:id=>current_user.manageable_ids) :  @company.users.active.cross_pitch_only
      - projects = @company.projects.cross_pitch_only
      .col-md-6.required
        .form-group
          = label_tag "Select User"
          %hr
          = select_tag :user_id, options_from_collection_for_select(users.order('name'), :id, :name), {prompt: "Please Select", class: 'form-control', required: true}
      .col-md-6.required
        .form-group
          = label_tag "Select Project"
          %hr
          = select_tag :project_id, options_from_collection_for_select(projects.order('name'), :id, :name), {prompt: "Please Select", class: 'form-control', required: true}


    %hr
    %div
      .col-md-12
        .form-group
          = button_tag type: "submit", class: "btn btn-primary", data: {disable_with: "Please Wait..."} do
            = fa_icon "floppy-o"
            Save
          = link_to :back, class: "btn btn-danger" do
            = fa_icon "close"
            Cancel
