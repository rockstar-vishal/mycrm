.content-wrapper
  .content-header
    .container-fluid
      .row.mb-2
        .col-md-9
          %ol.breadcrumb
            %li.breadcrumb-item
              %a{:href => "/"} Home
            %li.breadcrumb-item.active Leads Report
          %h1.m-0.text-dark Leads Report
  .content
    .container-fluid
      .row
        .col-lg-12
          .card
            .card-header
              = link_to params.except(:action, :controller).merge!(format: :csv), class: "btn btn-primary btn-sm", style: "right: 5px;" do
                = fa_icon "download"
                Export
              = render 'reports_button', locals: {report_name: :leads}
              = render 'report_search'
            .card-body
              - plottable = {}
              .table-responsive
                %table.table.table-bordered.table-hover.dataTables.table-sm.responsive.nowrap{style: 'width:100%!important'}
                  %thead
                    %tr
                      %th.all User
                      %th.all Total
                      - @statuses.uniq.each do |status|
                        %th.desktop= status.name
                  %tbody
                    - @users.each do |user|
                      - this_user_data = @data.select{|k| k["user_id"] == user.id}
                      - if this_user_data.present?
                        - user_total = (this_user_data.map{|k| k["lead_ids"].count}.sum rescue 0)
                        - plottable[user.name] = user_total
                        %tr
                          %td= user.name
                          %td
                            = link_to ld_path(:assigned_to=>[user.id]), target: "_blank" do
                              = user_total
                          - @statuses.uniq.each do |status|
                            - this_status_data = this_user_data.detect{|k| k["status_id"] == status.id}
                            %td
                              = link_to ld_path(:assigned_to=>[user.id], :lead_statuses=>[status.id]), target: "_blank" do
                                = this_status_data["lead_ids"].count rescue 0
                  - if @data.present?
                    %tbody
                      %tr
                        %td Total
                        %td
                          = link_to ld_path(assigned_to: @users.ids), target: "_blank" do
                            = @data.map{|k| k["lead_ids"].count}.sum rescue 0
                        - @statuses.uniq.each do |status|
                          %td
                            = link_to ld_path(:assigned_to=>[@users.ids], :lead_statuses=>[status.id]), target: "_blank" do
                              = @data.collect{|k| k["lead_ids"].count if k["status_id"] == status.id}.compact.sum rescue 0
              .chart-canvas.d-none.d-sm-block.pieChart
                = pie_chart(plottable, library: {animation: {easing: 'easeOutQuart'}})