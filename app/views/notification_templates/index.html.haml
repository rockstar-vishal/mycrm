.content-wrapper
  .content-header
    .container-fluid
      .row.mb-2
        .col-md-9
          %ol.breadcrumb
            %li.breadcrumb-item
              %a{:href => "/"} Home
            %li.breadcrumb-item.active Notification Template
          %h1.m-0.text-dark Notification Template
  .content
    .container-fluid
      .row
        .col-lg-12
          .card
            .card-header
              .float-right
                .input-group
                  .input-group-btn
                    = link_to 'Add New Template', new_notification_template_path, remote: true, class: 'btn btn-primary float-right btn-sm'
              %h4.mb-0 Notification Template
              
            .card-body
              .table-responsive
                %table.table.table-bordered.table-hover.dataTables.table-sm.responsive.nowrap{style: 'width:100%!important'}
                  %thead
                    %tr
                      %th.all Name
                      %th.all Body
                      %th.all Template Id
                      %th.all Action
                  %tbody
                    - @templates.each do |nt|
                      %tr
                        %td
                          = nt.name
                        %td
                          = nt.body
                        %td
                          = nt.template_id
                        %td
                          = link_to (fa_icon "pencil"), edit_notification_template_path(nt.uuid), remote: true, class: "btn btn-primary btn-sm"
          - if @templates.present?
            .pagination-custom-holder
              %strong{style: "margin-left: 0;"} Templates Count - #{@templates.count}
              = will_paginate @templates, :class  =>  "ct-pag"