                            %div.stats.text-danger
                              %b= differential
                              %b %
                          - if differential >= 0
                            %div.stats.text-success
                              %b= differential
                              %b %
                        - else
                          .stats N/A
                        %div.stat-title change
                      .col-6
                        - if @past_abandoned_call > 0
                          %div.stats
                            %b= @past_abandoned_call_percent
                            %b %
                            %b= "(#{@past_abandoned_call})"
                        - else
                          .stats N/A
                        %div.stat-title prev.day
                  - else
                    %B N/A
