.login-page
  .login-wrapper.shadow
    - if request.base_url.include?("acre-junction")
      = image_tag "aj-logo-new.png", class: "logo img-fluid"
    - else
      = image_tag "h4-logo.png", class: "logo img-fluid"
    %h4 CRM
    = form_for('user', url: user_session_path, html: {class: 'form-horizontal'}) do |f|
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'
      .form-group.input-icon
        .inner-addon.right-addon
          = f.password_field :password,
            autocomplete: 'off',
            placeholder: 'Password',
            class: 'form-control'
        
          %svg{:viewbox => "0 0 640 512", :xmlns => "http://www.w3.org/2000/svg"}
